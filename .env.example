# Database Configuration
# PostgreSQL connection string for your database
DATABASE_URL="postgresql://username:password@localhost:5432/mental_health_portal"

# Redis connection string for caching and session storage
REDIS_URL="redis://localhost:6379"

# Authentication Configuration
# Secret key for NextAuth.js sessions (generate a secure random string)
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"

# Base URL for NextAuth callbacks (adjust for your domain)
NEXTAUTH_URL="http://localhost:3000"

# AI Services Configuration
# OpenAI API key for AI-powered features (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Deepgram API key for voice processing and transcription
DEEPGRAM_API_KEY="your-deepgram-api-key-here"

# Storage & Services Configuration
# Vercel Blob storage token for file uploads and storage
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your-token-here"

# Vercel project configuration (for deployment)
VERCEL_PROJECT_ID="your-vercel-project-id"

# Application Configuration
# Environment mode (development, staging, production)
NODE_ENV="development"

# Public app URL for client-side usage
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Custom configuration
# Custom app name (optional)
NEXT_PUBLIC_APP_NAME="Mental Health Patient Portal"

# Email configuration (if implementing email notifications)
EMAIL_FROM="noreply@yourapp.com"
EMAIL_SERVER="smtp://username:password@smtp.yourprovider.com:587"

# Analytics and Monitoring (optional)
# Vercel Analytics configuration
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# Sentry DSN for error monitoring (optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Feature Flags (optional)
# Enable/disable specific features during development
ENABLE_VOICE_MESSAGES="true"
ENABLE_AI_CHAT="true"
ENABLE_TELEMETRY="false"

# Security Configuration
# Rate limiting configuration (requests per minute)
RATE_LIMIT_RPM="100"

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://yourapp.com"

# Development Configuration
# Enable debug logging in development
DEBUG="false"

# Disable telemetry collection
NEXT_TELEMETRY_DISABLED="1"

# Additional Database Options
# Database connection pool settings (optional)
DATABASE_POOL_MIN="2"
DATABASE_POOL_MAX="10"

# Redis configuration options (optional)
REDIS_MAX_RETRIES="3"
REDIS_RETRY_DELAY="1000"

# Session Configuration
# Session timeout in seconds (24 hours = 86400)
SESSION_TIMEOUT="86400"

# Cookie settings
COOKIE_SECURE="false"
COOKIE_SAME_SITE="lax"